<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/edit_text_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_trackId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Id:- 148729"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        />

    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_below="@+id/tv_trackId"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/companyName_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_companyName"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Company/person Name:-"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Salentro"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/hint_color"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shipmetfrom_layout"
            android:layout_below="@+id/companyName_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Shipment from:-"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Melbourne,Australia"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/hint_color"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/shipmetfrom_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Shipment to:-"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New York,USA"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/hint_color"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/address_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 june 2017"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_clock_icon"
            android:layout_centerVertical="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Track"
            android:inputType="text"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_track_icon"
            android:background="@drawable/button_backgroud"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</RelativeLayout>
